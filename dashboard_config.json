{
  "dashboard": {
    "name": "MediVote Network Dashboard",
    "port": 8084,
    "host": "0.0.0.0",
    "refresh_interval": 30,
    "max_nodes_display": 100
  },
  "network": {
    "coordinator_url": "http://localhost:8083",
    "bootstrap_nodes": [
      "127.0.0.1:8546"
    ],
    "auto_discovery": true,
    "discovery_interval": 30
  },
  "storage": {
    "data_dir": "./dashboard_data",
    "backup_interval": 3600
  },
  "security": {
    "trusted_ips": ["127.0.0.1", "localhost", "::1"]
  }
}